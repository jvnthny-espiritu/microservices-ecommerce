# Database
DATABASE_URL=sqlite:///./user.db

# JWT Configuration - Use at least 32 random bytes for production
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=replace-with-a-strong-secret-32-bytes-minimum
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=120

# Connection Pool (for PostgreSQL/MySQL - ignored for SQLite)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# Rate Limiting (auth endpoints)
AUTH_RATE_LIMIT=5/minute

# Note: HTTPS/TLS should be terminated at your load balancer (nginx, AWS ALB, etc.)
# Configure your reverse proxy with SSL certificates for production.
